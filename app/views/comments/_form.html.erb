<%= form_with model: [@post, @post.comments.build], local: true do |f| %>
  <% if !user_signed_in? %>
    <div class="form-group">
      <strong>
        <%= f.label :name %>
      </strong>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Your name...' %>
    </div>
    <p>
    </p>
  <% end %>
  <div class="form-group">
    <strong>
      <%= f.hidden_field :body %>
    </strong>
    <%= f.text_area :body, class: 'form-control', placeholder: 'Write comment ...' %>
  </div>
  <p>
  </p>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>